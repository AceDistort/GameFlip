{% extends 'admin/admin_base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block contenu %}
    <p class="h3">Categories</p>
    <a class="btn btn-primary m-3" href="{{ path('app_admin_category_add') }}">Add a category</a>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Color</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <th>{{ category.name }}</th>
                <td>{{ category.description }}</td>
                <td>{{ category.color }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_admin_category_modify', {'id': category.id}) }}">Modify</a>
                    <a class="btn btn-danger" href="{{ path('app_admin_category_delete', {'id': category.id}) }}"
                       onclick="return confirm('Are you sure you want to delete this category ?')"
                    >Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
