{% extends 'admin/admin_base.html.twig' %}

{% block title %}City{% endblock %}

{% block contenu %}

    <p class="h3">City</p>
    <a class="btn btn-primary m-3" href="{{ path('app_admin_city_add') }}">Add a city</a>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Postal code</th>
            <th scope="col">Name</th>
            <th scope="col">Users</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.postalCode }}</td>
                <td>{{ city.name }}</td>
                <td>
                    {% for user in city.users %}
                        {{ user.firstName }} {{ user.lastName }}
                        {% if not loop.last %} - {% endif %}
                    {% endfor %}
                </td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_admin_city_modify', {'id': city.id}) }}">Modify</a>
                    <a class="btn btn-danger" href="{{ path('app_admin_city_delete', {'id': city.id}) }}"
                       onclick="return confirm('Are you sure you want to delete this city ?')"
                    >Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
