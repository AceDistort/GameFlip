{% extends 'admin/admin_base.html.twig' %}

{% block title %}Users{% endblock %}

{% block contenu %}
    <p class="h3">Users</p>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Email</th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Games</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{% for item in user.items %}{{ item.game.name }}{% if not loop.last %}, {% endif %}{% endfor %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
